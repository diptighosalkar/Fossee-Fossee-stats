    $query = "
       SELECT Distinct (District) as state FROM City
       WHERE CountryCode =:country order by District
       ";
    $args = array(
        ":country" => $country
    );
    $result = db_query($query, $args);
    $options = array();
    while ($row = $result->fetchObject()) {
