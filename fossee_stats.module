function createZipOfPosterMaterial($name = ""){

$root_path = posters_path();
$eventfolder = $name;
$zip_filename=$root_path.$eventfolder.".zip";

$zip = new ZipArchive();
// open archive
if ($zip->open($root_path.$eventfolder.".zip", ZIPARCHIVE::CREATE) !== TRUE) {
die ("Could not open archive");
}
