//General Function to create table
function bootstrap_table_format($headers, $rows)
{
    $thead = "";
    $tbody = "";
    foreach ($headers as $header) {
        $thead .= "<th>{$header}</th>";
    }
    foreach ($rows as $row) {
        $tbody .= "<tr>";
        $i = 0;
        foreach ($row as $data) {
            $datalable = $headers[$i++];
            $tbody .= "<td data-label=" . $datalable . ">{$data}</td>";
        }
        $tbody .= "</tr>";
    }
    $table = "
			
            		<table class='table table-bordered table-hover'>
                	<thead>{$thead}</thead>
                	<tbody>{$tbody}</tbody>
            		</table>
			
        		";
    return $table;
}

